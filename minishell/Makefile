################################################################################
#                                  SOURCE FILES                                #
################################################################################

SRC = main.c lexer.c init.c list_aux.c env.c
OBJS = $(SRC:.c=.o)
DEPS = libft/libft.a

################################################################################
#                           EXECUTABLES & LIBRARIES                            #
################################################################################

NAME = minishell
LIBFT = libft/libft.a

################################################################################
#                                     FLAGS                                    #
################################################################################

CC = cc
CFLAGS = -Wall -Wextra -Werror -g

################################################################################
#                                    RULES                                     #
################################################################################

all: deps $(NAME)

deps:
		$(MAKE) -C ./libft

$(NAME): $(OBJS) $(DEPS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS) $(LIBFT) -lreadline


$(OBJS): %.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(MAKE) $@ -C ./libft
	@rm -rf $(OBJS)

fclean: clean
	$(MAKE) $@ -C ./libft
	@rm -rf $(NAME)

re: fclean all